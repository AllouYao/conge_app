{% extends 'base.html.twig' %}

{% block title %}Detail catégorie{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title-custom" style="color: white">
                        <i data-feather="list"></i>
                        CATEGORIE DE SALAIRE
                    </h5>
                </div>
                <div class="card-body">
                    <fieldset>
                        <table class="table table-bordered table-sm">
                            <thead class="table-light">
                            <tr>
                                <th class="text-center">Catégorie</th>
                                <th class="text-center">Echelon</th>
                                <th class="text-center">Salaire catégoriel</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td class="text-left">{{ category.categorySalarie }}</td>
                                <td class="text-center">{{ category.intitule }}</td>
                                <td class="text-center">{{ category.amount|number_format(0, ',', ' ') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </fieldset>
                </div>
                <div class="card-footer">
                    <a href="{{ path('settings_category_edit', {'uuid': category.uuid}) }}"
                       class="btn btn-warning float-end " style="color: white">Modifier</a>
                    <a href="{{ path('settings_category_index') }}" class="btn btn-info float-end me-2"
                       style="color: white">Retour</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

