                                        <td>Indemnité de préavis</td>
                                        <td></td>
                                        <td></td>
                                        <td class="text-end">{{ payroll_departure.indemnite_preavis|number_format(0, ',', ' ') }}</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
