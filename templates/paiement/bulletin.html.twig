{% endblock %}

{% block content %}
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-content">
                    <div class="row mb-3">
                        <div class="col-md-12 mb-3" style="border: 2px double silver; padding: 10px; border-radius: 5px"
                             id="header">
                            <h4 class="text-center"><strong>BULLETIN DE PAIE </strong></h4>
                        </div>
                        <div class="col-md-12 mb-1" style="display: flex">
                            <div class="col-md-1"
                                 style="margin-right: 5px; height: 140px; width: 140px; border: #0b0b0f solid 1px">
                                <p>
                                    <img height="140" width="140"
                                         src="{{ asset('img/logo.png') }}" alt="le logo"/>
                                </p>
                            </div>
                            <div class="col-md-5"
                                 style="margin-right: 5px; height: 140px; width: 250px; border: #0b0b0f solid 1px">
                                <table class="table table-sm table-borderless">
                                    <tbody>
                                    <tr class="small-text sans-bordure no-border-top no-border-button">
                                        <th style="font-size: smaller">Matricule</th>
                                        <td style="font-weight: bolder; font-size: smaller">{{ payrolls.matricule }}</td>
                                    </tr>
                                    <tr class="small-text sans-bordure no-border-top no-border-button">
                                        <th style="font-size: smaller">Service</th>
                                        <td style="font-size: smaller">{{ payrolls.service }}</td>
                                    </tr>
                                    <tr class="small-text sans-bordure no-border-top no-border-button">
                                        <th style="font-size: smaller">Catégorie</th>
                                        <td style="font-size: smaller">{{ payrolls.categorie }}</td>
                                    </tr>
                                    <tr class="small-text sans-bordure no-border-top no-border-button">
                                        <th style="font-size: smaller">Salaire catégoriel</th>
                                        <td style="font-size: smaller">{{ payrolls.Salaire_categoriel }}</td>
                                    </tr>
                                    <tr class="small-text sans-bordure no-border-top no-border-button">
                                        <th style="font-size: smaller">Nbre de part</th>
                                        <td style="font-size: smaller">{{ payrolls.nombre_part }}</td>
                                    </tr>
                                    <tr class="small-text sans-bordure no-border-top no-border-button">
                                        <th style="font-size: smaller">Date d'entrée</th>
                                        <td style="font-size: smaller">{{ payrolls.date_embauche }}</td>
                                    </tr>
                                    <tr class="small-text sans-bordure no-border-top ">
                                        <th style="font-size: smaller">N° CNPS</th>
                                        <td style="font-size: smaller">{{ payrolls.numero_cnps }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-6" style="height: 140px; width: 250px; border: #0b0b0f solid 1px">
                                <p style="font-weight: bold; margin: 0  0 0 2px">
                                    <span style="font-size: smaller">PERIODE DE PAIE:</span>
                                    <span style="text-align: right; margin-left: 2px; font-size: smaller">{{ payrolls.periode_paie|capitalize }}</span>
                                </p>
                                <p style="font-weight: bold; margin: 0  0 0 2px">
                                    <span style="font-size: smaller">DATE D'EDITION:</span>
                                    <span style="text-align: right; margin-left: 2px; font-size: smaller">{{ payrolls.date_edition }}</span>
                                </p>
                                <p style="font-weight: bold; margin: 0  0 0 2px">
                                    <span style="font-size: smaller">NOM ET PRENOMS	:</span>
                                    <span style="text-align: right; margin-left: 2px; font-size: smaller">{{ payrolls.nom_prenoms|upper }}</span>
                                </p>
                                <p style="font-weight: bold; margin: 0  0 0 2px">
