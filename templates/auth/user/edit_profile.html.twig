
{% extends 'base.html.twig' %}

{% block title %}Créer catégorie professionnelle{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title-custom" style="color: white">
                        <i data-feather="list"></i>
                        MODIFICATION: MON COMPTE UTILISATEUR
                    </h5>
                </div>
                <div class="card-body">
                    <fieldset>
                        <div class="row">
                            <div class="col-10">
                                <div class="mb-3 row">
                                    <label class="col-md-2 col-form-label" for="example-placeholder">Nom utilisateur<span
                                                class="text-danger">*</span></label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.username) }}
                                        {{ form_errors(form.username) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-10">
                                <div class="mb-3 row">
                                    <label class="col-md-2 col-form-label" for="example-placeholder">Email <span class="text-danger">*</span></label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.email) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-10">
                                <div class="mb-3 row">
                                    <label class="col-md-2 col-form-label" for="example-placeholder">Ancien mot de passe <span class="text-danger">*</span></label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.holdPassword) }}
                                        {{ form_errors(form.holdPassword) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-10">
                                <div class="mb-3 row">
                                    <label class="col-md-2 col-form-label" for="example-placeholder">Nouveau mot de passe <span class="text-danger">*</span></label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.newPassword) }}
                                        {{ form_errors(form.newPassword) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-10">
                                <div class="mb-3 row">
                                    <label class="col-md-2 col-form-label" for="example-placeholder">Confirmation de nouveau mot passe <span class="text-danger">*</span></label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.confirmePassword) }}
                                        {{ form_errors(form.confirmePassword) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-10">
                                <div class="mb-3 row">
                                    <label class="col-md-2 col-form-label" for="example-placeholder">Roles </label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.customRoles) }}
                                        {{ form_errors(form.customRoles) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="card-footer">
                    <button type="submit"
                            class="btn btn-primary float-end">{{ button_label|default('Enregistrer') }}</button>
                    <a href="{{ path('app_home') }}"
                       class="btn btn-info float-end me-2" style="color: white">Retour</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


