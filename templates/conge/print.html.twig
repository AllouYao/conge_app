{% extends 'imprimerLivrePaie.html.twig' %}

{% block title 'Demande de congé annuel' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .header-section {
            margin-bottom: 30px;
        }
        .logo-section {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        .logo-box {
            width: 60px;
            height: 60px;
            background-color: #28a745;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 32px;
            font-weight: bold;
            margin-right: 15px;
            border-radius: 4px;
        }
        .company-info {
            flex: 1;
        }
        .company-info h4 {
            margin: 0;
            font-size: 18px;
            font-weight: bold;
        }
        .company-info p {
            margin: 2px 0;
            font-size: 11px;
        }
        .document-title {
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            margin: 30px 0;
            text-transform: uppercase;
        }
        .request-content {
            margin: 30px 0;
            line-height: 1.8;
            font-size: 14px;
        }
        .request-content p {
            margin: 10px 0;
        }
        .signature-table {
            width: 100%;
            margin-top: 50px;
            border-collapse: collapse;
        }
        .signature-table th,
        .signature-table td {
            border: 1px solid #000;
            padding: 15px;
            text-align: center;
            vertical-align: top;
            width: 33.33%;
        }
        .signature-table th {
            background-color: #f5f5f5;
            font-weight: bold;
            font-size: 12px;
        }
        .signature-table td {
            min-height: 100px;
            font-size: 11px;
        }
        .signature-space {
            height: 80px;
        }
        @media print {
            .btn-print, .btn-back {
                display: none;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="widget">
                <div class="widget-content">
                    <!-- En-tête avec logo et informations de l'entreprise -->
                    {% set society = get_society() %}
                    <div class="header-section">
                        <div class="logo-section">
                            <div class="logo-box">{{ society and society.raisonSocial ? society.raisonSocial|first|upper : 'G' }}</div>
                            <div class="company-info">
                                <h4>{{ society ? society.raisonSocial : 'Gremica CI SARL' }}</h4>
                                <p>Capital social : {{ society and society.numeroCC ? society.numeroCC : '1.000.000 F CFA' }}</p>
                                <p>{{ society and society.siege ? society.siege : 'Abidjan, Cocody Attoban Zinsou' }}</p>
                                <p>N°RCCM {{ society and society.numeroCC ? society.numeroCC : '1747895632' }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Titre du document -->
                    <div class="document-title">
                        DEMANDE DE CONGE ANNUEL
                    </div>

                    <!-- Contenu de la demande -->
                    <div class="request-content">
                        <div>
                            Je soussigné {{ conge.personal.firstName|upper }} {{ conge.personal.lastName|upper }}
                        </div>
                        <div class="request-content-item">
                            {% set fonctions = conge.personal.fonctions|first %}
                            <strong>Fonction :</strong> {{ fonctions ? fonctions.libelle : 'N/A' }}
                        </div>
                        <div class="request-content-item">
                            <strong>Sollicite un congé annuel de {{ conge.totalDays }} jour(s) au titre de l'année {{ conge.dateDepart|date('Y') }}.</strong>
                        </div>
                            <div class="request-content-item">
                            <strong>Période allant du {{ conge.dateDepart|date('d-m-Y') }} au {{ conge.dateRetour|date('d-m-Y') }}.</strong>
                        </div>
                        <div class="request-content-item">
                            <strong>Date de reprise le : {{ dateReprise ? dateReprise|date('d-m-Y') : '' }}.</strong>
                        </div>
                    </div>

                    <!-- Tableau des signatures -->
                    <table class="signature-table">
                        <thead>
                            <tr>
                                <th>Date et Signature du Demandeur</th>
                                <th>Date et Signature du Supérieur Hiérarchique</th>
                                <th>Avis du Supérieur Hiérarchique</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="signature-space"></div>
                                    <p style="margin-top: 10px;">{{ conge.dateDepart|date('d-m-Y') }}</p>
                                </td>
                                <td>
                                    <div class="signature-space"></div>
                                    <p style="margin-top: 10px;"></p>
                                </td>
                                <td>
                                    <div class="signature-space"></div>
                                    <p style="margin-top: 10px;"></p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <a class="btn btn-dark btn-print pull-right" style="color: white" href="javascript:window.print()">
                <i class="icon-print"></i>
                Imprimer
            </a>
            <a class="btn btn-info btn-back pull-right" style="margin-right: 5px; color: white" onclick="window.close()"
               href="{{ path('conge_index') }}">
                Retour
            </a>
        </div>
    </div>
{% endblock %}

