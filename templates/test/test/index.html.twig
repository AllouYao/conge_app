        }

        .height-rectangle {
            height: 45px;
            width: auto;
            border: solid;
            position: relative;
        }

        .rectangle {
            height: 50px;
            width: auto;
            border: solid;
            position: relative;
        }

        .small-rectangle {
            height: 50px;
            width: 30%;
            border: solid;
            position: relative;
