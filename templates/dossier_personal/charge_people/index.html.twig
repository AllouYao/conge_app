{% extends 'base.html.twig' %}

{% block title %}Liste du personnel salarié{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title-custom" style="color: white">
                        <i data-feather="list"></i>
                        Liste du personnel salarié
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-responsive table-sm" id="basic-datatable">
                        <thead class="table-light">
                        <tr>
                            <th class="text-center">Matricule</th>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Prénom(s)</th>
                            <th class="text-center">Date de naissance</th>
                            <th class="text-center">Catégorie</th>
                            <th class="text-center">Date d'embauche</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for personal in personals %}
                            <tr>
                                <td class="text-right">{{ personal.matricule }}</td>
                                <td class="text-left">{{ personal.firstName }}</td>
                                <td class="text-left">{{ personal.lastName }}</td>
                                <td class="text-center">{{ personal.birthday ? personal.birthday|date('d/m/Y') : '' }}</td>
                                <td class="text-left">{{ personal.categorie.intitule }}</td>
                                <td class="text-center">{{ personal.contract.dateEmbauche ? personal.contract.dateEmbauche|date('d/m/Y') : '' }}</td>
                                <td class="text-center">
                                    <a href="{{ path('charge_people_edit', {'uuid': personal.uuid}) }}">
                                        <i data-feather="edit" class="feather" style="color: yellow"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a href="{{ path('charge_people_new') }}" class="btn btn-primary float-end">Nouveau</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
