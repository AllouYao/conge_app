<fieldset>
    <legend>Information du salarié</legend>
    <div class="mb-2 row">
        <label class="col-md-2 col-form-label">Matricule <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.personal) }}
        </div>
        <label class="col-md-2 col-form-label">Nom & Prénom(s) <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="mb-2 row">
        <label class="col-md-2 col-form-label">Date d'embauche <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.hireDate) }}
        </div>
        <label class="col-md-2 col-form-label">Catégorie <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.category) }}
        </div>
    </div>
</fieldset>

<fieldset>
    <legend>Detail départ</legend>
    <div class="mb-2 row">
        <label class="col-md-1 col-form-label">Type départ <span class="text-danger">*</span></label>
        <div class="col-md-3">
            {{ form_widget(form.reason) }}
        </div>
        <label class="col-md-1 col-form-label">Bilan financier <span class="text-danger">*</span></label>
        <div class="col-md-3">
            {{ form_widget(form.isPaied) }}
        </div>
        <label class="col-md-1 col-form-label">Date d'éffet <span class="text-danger">*</span></label>
        <div class="col-md-3">
            {{ form_widget(form.date) }}
        </div>
    </div>
</fieldset>