{% block _assurance_detailRetenueForfetaires_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _assurance_detailRetenueForfetaires_widget %}
    <div class="col-md-12">
        <div class="form-group pull-right">
            <button type="button"
                    data-remove-target="block_{{ id }}"
                    data-tr-id="{{ id }}"
                    data-collection-holder-class="#assurance_detailRetenueForfetaires"
                    data-target="#detail_personal_assurance_table"
                    data-index="{{ form | length > 0 ? form | last.vars.name + 1 : 0 }}"
                    class="btn btn-soft-primary add_item_link mb-2 float-end">
                Nouvelle ligne
            </button>
        </div>
    </div>
    {{ form_widget(form) }}
{% endblock %}

{% block _assurance_detailRetenueForfetaires_entry_widget %}
    <tr id="block_{{ id }}" data-id="{{ id }}" class="data-row">
        <td>
            {{ form_widget(form.retenuForfetaire) }}
        </td>
        <td>
            {{ form_widget(form.chargePeople) }}
        </td>
        <td>
            {{ form_widget(form.amount) }}
        </td>
        <td class="text-center">
            <button type="button"
                    class="btn btn-danger btn-sm btn-rounded del_item_link"
                    data-action="delete"
                    data-target="#block_{{ id }}">
                <i class="bi bi-trash"></i>
            </button>
        </td>
    </tr>
{% endblock %}
