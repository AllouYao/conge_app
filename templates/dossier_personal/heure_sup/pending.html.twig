{% extends 'base.html.twig' %}

{% block title %}Heures supplémentaires en attente {% endblock %}
{% block stylesheets %}
    <style>
        #dataGridSup {
            border-width: 50px;
        }
    </style>
{% endblock %}
{% block body %}
    <form method="POST" action="{{ path('personal_heure_sup_validate') }}" id="formContainerSup">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title-custom" style="color: white" id="date">
                            <i data-feather="list"></i>
                            HEURES SUPPLEMENTAIRES EN ATTENTE DE VALIDATION
                        </h5>
                    </div>
                    <div class="card-body">
                        <div id="dataGridSup"></div>
                        <div class="modal fade" id="validationConfirmationModal" tabindex="-1" role="dialog"
                             aria-labelledby="validationConfirmationModal" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="validationConfirmationModal">Confirmation de
                                            validation</h5>
                                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Êtes-vous sûr de vouloir valider les informations ci-dessous, après quoi vous ne pourriez plus les modifiés ?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler
                                        </button>
                                        <button type="button" class="btn btn-success confirm" name="confirm"
                                                id="confirmValidationButton">
                                            Confirmer
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="heureSupInput" name="heureSupInput">
    </form>
{% endblock %}

{% block javascripts %}

    <script>
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
        }

        $(document).ready(function () {
            const dataGrid = $("#dataGridSup").dxDataGrid({
                dataSource: '{{ url("personal_heure_sup_api_heure_supplementaire_pending") }}',
                showBorders: true,
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                allowColumnReordering: true,
                allowColumnResizing: true,
                columnAutoWidth: true,
                height: 355,
                scrolling: {
                    columnRenderingMode: 'virtual',
                    mode: 'virtual'
                },
                editing: {
                    mode: 'cell'
                },
                selection: {
                    mode: 'multiple',
                    showCheckBoxesMode: 'always'
                },
                groupPanel: {
                    visible: true
                },
                grouping: {
                    autoExpandAll: true
                },
                searchPanel: {
                    visible: true,
                    width: 240,
                    placeholder: 'Rechercher...'
                },
                paging: {
                    pageSize: 10
                },
                columns: [
                    {
                        caption: 'Matricule',
                        alignment: 'left',
                        dataType: 'string',
                        dataField: 'matricule',
                    },
                    {
                        caption: 'Nom',
                        alignment: 'left',
                        dataType: 'string',
                        dataField: 'name',
                    },
                    {
                        caption: 'Prénom(s)',
                        alignment: 'left',
                        dataType: 'string',
                        dataField: 'last_name',
                    },
                    {
                        caption: 'Date Naissance',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'date_naissance',
                    },
                    {
                        caption: 'Catégorie Salarié',
                        alignment: 'left',
                        dataType: 'string',
                        dataField: 'categorie_salarie',
                    },
                    {
                        caption: 'Date Embauche',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'date_embauche',
                    },
                    {
                        caption: 'Date Début',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'date_debut',
                    },
                    {
                        caption: 'Heure Début',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'heure_debut',
                    },
                    {
                        caption: 'Date Fin',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'date_fin',
                    },
                    {
                        caption: 'Heure Fin',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'heure_fin',
                    },
                    {
                        caption: 'Total Horraire',
                        alignment: 'center',
                        dataType: 'number',
                        dataField: 'total_horaire',
                        customizeText: function (data) {
                            return new Intl.NumberFormat('fr-FR').format(data.value);
                        },
                    },
                    {
                        caption: 'Ajouté le',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'date_creation',
                    },
                    {
                        caption: 'Statut',
                        alignment: 'center',
                        dataType: 'object',
                        dataField: 'status',
                        cellTemplate: function (container, options) {
                            const status = options.value;
                            let badgeClass = 'badge badge badge-soft-primary';
                            $("<span>")
                                .addClass(badgeClass)
                                .text(status)
                                .appendTo(container);
                        }
                    },
                ],
                toolbar: {
                    items: [
                        {
                            location: 'after',
                            widget: 'dxButton',
                            options: {
                                text: 'Valider les heures suppl.',
                                icon: 'bi bi-journal-check',
                                disabled: false,
                                onClick() {
                                    $('#validationConfirmationModal').modal('show');
                                }
                            }
                        }
                    ]
                }
            }).dxDataGrid("instance");

            // Gérer le clic sur le bouton de confirmation dans le modal de validation
            $('#confirmValidationButton').click(function () {
                // Récupérer les éléments sélectionnés dans la grille de données
                const selectedKeys = dataGrid.getSelectedRowKeys();
                const heureSupps = [];
                selectedKeys.forEach((heureSupp) => {
                    if (heureSupp.hasOwnProperty('id')) {
                        heureSupps.push(heureSupp.id)
                    }
                })

                $('#heureSupInput').val(`[${heureSupps}]`)
                $('#formContainerSup').submit()
            });
        })
    </script>

{% endblock %}