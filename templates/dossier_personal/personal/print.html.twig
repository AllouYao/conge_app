{% extends 'imprimerLivrePaie.html.twig' %}

{% block title 'Fiche information salarié' %}


{% block content %}
    <div class="row">
        <div class="col-md-12 col-lg-offset-2">
            <div class="widget">
                <div class="widget-content">
                    <div class="row">
                        <div class="col-md-12 mb-3" style="border: 2px double silver; padding: 10px; border-radius: 5px"
                             id="header">
                            <h4 class="text-center"><strong>FICHE D'INFORMATION SALARIE </strong></h4>
                        </div>
                        <br><br><br><br>

                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="col-md-12 row">
                                    <div class="col-md-6 left">
                                        <p>
                                            <span class="h5 text-center">N° Ordre : </span> <span class="h5"
                                                                                                  style="margin-left: 10px">{{ index }}</span><br><br>
                                            <span class="h5 text-center">Nom et prénoms : </span> <span class="h5"
                                                                                                        style="margin-left: 10px">{{ personals.firstName|upper }} {{ personals.lastName|upper }}</span><br><br>
                                            <span class="h5 text-center">Date d'embauche : </span> <span class="h5"
                                                                                                         style="margin-left: 10px">{{ personals.contract.dateEmbauche|date('d/m/Y') }}</span><br><br>
                                            <span class="h5 text-center">Date de naissance : </span> <span
                                                    class="h5"
                                                    style="margin-left: 10px">{{ personals.birthday|date('d/m/Y') }}</span><br><br>
                                            <span class="h5 text-center">Fonction : </span> <span class="h5"
                                                                                                  style="margin-left: 10px">{{ personals.fonction|capitalize }}</span><br><br>
                                            <span class="h5 text-center">Département ou service : </span> <span
                                                    class="h5"
                                                    style="margin-left: 10px">{{ personals.service|capitalize }}</span><br><br>
                                            <span class="h5 text-center">Diplôme : </span> <span class="h5"
                                                                                                 style="margin-left: 10px">{{ personals.niveauFormation|upper }}</span><br><br>
                                            <span class="h5 text-center">Compte banque : </span> <span class="h5"
                                                                                                       style="margin-left: 10px">{{ accountBanque|upper }}</span><br><br>
                                            <span class="h5 text-center">Nom banque : </span> <span class="h5"
                                                                                                    style="margin-left: 10px">{{ '' }}</span><br><br>
                                            <span class="h5 text-center">Grade catégoriel : </span> <span class="h5"
                                                                                                          style="margin-left: 10px">{{ personals.categorie.intitule }}</span><br><br>
                                        </p>
                                    </div>
                                    <div class="col-md-6 right ">
                                        <p style="margin-left: 25%">
                                            <span class="h5 text-center">Matricule : </span> <span class="h5"
                                                                                                   style="margin-left: 10px">{{ personals.matricule }}</span><br><br>
                                            <span class="h5 text-center">Ancienneté (en année) : </span> <span
                                                    class="h5" style="margin-left: 10px">{{ anciennete }}</span><br><br>
                                            <span class="h5 text-center">Age (en année) : </span> <span class="h5"
                                                                                                        style="margin-left: 10px">{{ age }}</span><br><br>
                                            <span class="h5 text-center">Catégorie : </span> <span class="h5"
                                                                                                   style="margin-left: 10px">{{ personals.categorie.categorySalarie.name|upper }}</span><br><br>
                                            <span class="h5 text-center">Adresse : </span> <span class="h5"
                                                                                                 style="margin-left: 10px">{{ personals.address|upper }}</span><br><br>
                                            <span class="h5 text-center">Type de contrat : </span> <span class="h5"
                                                                                                         style="margin-left: 10px">{{ personals.contract.typeContrat|upper }}</span><br><br>
                                            <span class="h5 text-center">Durée du contrat (en mois) : </span> <span
                                                    class="h5"
                                                    style="margin-left: 10px">{{ dureeContrat }}</span><br><br>
                                            <span class="h5 text-center">Nature, N° pièce d'identité : </span> <span
                                                    class="h5"
                                                    style="margin-left: 10px">{{ personals.piece|upper }}{{ '° ' }}{{ personals.refPiece|upper }}</span><br><br>
                                            <span class="h5 text-center">Etat Civil : </span> <span class="h5"
                                                                                                    style="margin-left: 10px">{{ personals.etatCivil|upper }}</span><br><br>
                                            <span class="h5 text-center">Nombre enfant : </span> <span class="h5"
                                                                                                       style="margin-left: 10px">{{ nombreEnfant }}{{ ' enfant (s)' }}</span><br><br>

                                        </p>
                                    </div>
                                </div>
                                <table class="table table-bordered table-responsive table-sm">
                                    <tr>
                                        <td>Salaire de base</td>
                                        <td class="text-end">{{ salaireBase|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Prime de panier</td>
                                        <td class="text-end">{{ primePanier|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Prime de salissure</td>
                                        <td class="text-end">{{ primeSalissure|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Prime de tenue de travail</td>
                                        <td class="text-end">{{ primeTT|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Prime outillage</td>
                                        <td class="text-end">{{ primeOutil|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Prime de transport</td>
                                        <td class="text-end">{{ primeTransport|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Prime de fonction</td>
                                        <td class="text-end">{{ primeFonction|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Prime de logement</td>
                                        <td class="text-end">{{ primeLogement|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        <td>Avantage en nature</td>
                                        <td class="text-end">{{ avantageAmount|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                    <tr>
                                        {% set amountTT = salaireBase + primePanier + primeSalissure + primeTT
                                            + primeOutil + primeTransport + primeFonction + primeLogement + avantageAmount %}
                                        <th>TOTAL</th>
                                        <td class="text-end">{{ amountTT|number_format(0, ',', ' ') }}</td>
                                    </tr>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="">
            <a class="btn btn-dark btn-print pull-right" style="color: white" href="javascript:window.print()">
                <i class="icon-print"></i>
                Imprimer</a>
            <a class="btn btn-info btn-back pull-right" style="margin-right: 5px" onclick="window.close()"
               href="{{ path('app_home') }}">
                retour</a>
        </div>
    </div>
{% endblock %}


