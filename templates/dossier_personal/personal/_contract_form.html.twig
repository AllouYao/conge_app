    <label class="col-md-1 col-form-label">Date de fin <span
                class="text-danger">*</span></label>
    <div class="col-md-3">
        {{ form_widget(form.contract.dateFin) }}
    </div>
    <label class="col-md-1 col-form-label">Temps Contrac. <span
                class="text-danger">*</span></label>
    <div class="col-md-3">
        {{ form_widget(form.contract.tempsContractuel) }}
    </div>
    <label class="col-md-1 col-form-label">N° Contrat trav. <span
                class="text-danger">*</span></label>
    <div class="col-md-3">
        {{ form_widget(form.contract.refContract) }}
        {{ form_errors(form.contract.refContract) }}
    </div>
</div>