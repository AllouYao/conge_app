    <label class="col-md-1 col-form-label">Nature contrat <span
                class="text-danger">*</span></label>
    <div class="col-md-3">
        {{ form_widget(form.contract.typeContrat) }}
        {{ form_errors(form.contract.typeContrat) }}
    </div>
    <label class="col-md-1 col-form-label">Date d’emb. <span
                class="text-danger">*</span></label>
    <div class="col-md-3">
        {{ form_widget(form.contract.dateEmbauche) }}
        {{ form_errors(form.contract.dateEmbauche) }}
    </div>
    <label class="col-md-1 col-form-label">Date de début <span
                class="text-danger">*</span></label>
    <div class="col-md-3">
        {{ form_widget(form.contract.dateEffet) }}
