{% extends 'base.html.twig' %}

{% block title %}Modifier un salarié{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title-custom" style="color: white">
                        <i data-feather="list"></i>
                        Modifier salarié {{ personal.matricule }}
                    </h5>
                </div>
                <div class="card-body">
                    {{ include('dossier_personal/personal/_form.html.twig') }}
                </div>
                <div class="card-footer">
                    <button type="submit"
                            class="btn btn-primary float-end">{{ button_label|default('Enregistrer') }}</button>
                    <a href="{{ path('personal_index') }}"
                       class="btn btn-info float-end me-2">Retour</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}