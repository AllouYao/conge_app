{% block _personal_salary_detailSalaries_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _personal_salary_detailSalaries_widget %}
    <div class="col-md-12">
        <div class="form-group pull-right">
            <button type="button"
                    data-remove-target="block_{{ id }}"
                    data-tr-id="{{ id }}"
                    data-collection-holder-class="#personal_salary_detailSalaries"
                    data-target="#detail_personal_prime_table"
                    data-index="{{ form | length > 0 ? form | last.vars.name + 1 : 0 }}"
                    class="btn btn-primary add_item_link mb-2 float-end">
                Nouvelle ligne
            </button>
        </div>
    </div>
    {{ form_widget(form) }}
{% endblock %}

{% block _personal_salary_detailSalaries_entry_widget %}
    <tr id="block_{{ id }}" data-id="{{ id }}" class="data-row">
        <td>
            {{ form_widget(form.prime) }}
        </td>
        <td>
            {{ form_widget(form.smigHoraire, {'attr':{'class': 'separator text-end'}}) }}
        </td>
        <td>
            {{ form_widget(form.taux, {'attr':{'class': 'separator text-end'}}) }}
        </td>
        <td>
            {{ form_widget(form.amountPrime, {'attr':{'class': 'separator text-end amount-total-prime'}}) }}
        </td>
        <td class="text-center">
            <button type="button"
                    class="btn btn-danger btn-sm btn-rounded del_item_link"
                    data-action="delete"
                    data-target="#block_{{ id }}">
                <i class="bi bi-trash"></i>
            </button>
        </td>
    </tr>
{% endblock %}
