<fieldset>
    <legend>Information du salarié</legend>
    <div class="mb-2 row">
        <label class="col-md-2 col-form-label">Matricule <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.personal) }}
        </div>
        <label class="col-md-2 col-form-label">Nom & Prénom(s) <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="mb-2 row">
        <label class="col-md-2 col-form-label">Date d'embauche <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.hireDate) }}
        </div>
        <label class="col-md-2 col-form-label">Catégorie salarié<span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.category) }}
        </div>
    </div>
</fieldset>
<br>
<fieldset>
    <legend>Détail ancien congé</legend>
    <div class="mb-2 row">
        <label class="col-md-2 col-form-label">Date dernier retour de congé <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.dateRetour) }}
            {{ form_errors(form.dateRetour) }}
        </div>
        <label class="col-md-2 col-form-label">Montant salaire moyen annuel <span class="text-danger">*</span></label>
        <div class="col-md-4">
            {{ form_widget(form.salaryAverage) }}
            {{ form_errors(form.salaryAverage) }}
        </div>
    </div>
</fieldset>