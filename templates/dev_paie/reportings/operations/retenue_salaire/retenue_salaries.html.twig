{% extends 'base.html.twig' %}

{% block title %}Etat des retenues sur salaire (retenue) {% endblock %}
{% block stylesheets %}
    <style>
        #dataGridRetenueSalaire {
            border-width: 50px;
            height: 350px;
        }
    </style>
{% endblock %}
{% block body %}
    <form method="post" action="{{ path('dev_paie_operation_validate_retenue') }}" id="formContainerRetenueSalaire">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title-custom" style="color: white" id="date">
                            <i data-feather="list"></i>
                            RETENUE SUR SALAIRE
                        </h5>
                    </div>
                    <div class="card-body">
                        <div id="dataGridRetenueSalaire"></div>
                        <div class="modal fade" id="validationConfirmationModal" tabindex="-1" role="dialog"
                             aria-labelledby="validationConfirmationModal" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="validationConfirmationModal">Confirmation de
                                            validation</h5>
                                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Êtes-vous sûr de vouloir valider les retenues sur salaire sélectionnées ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler
                                        </button>
                                        <button type="button" class="btn btn-success confirm" name="confirm"
                                                id="confirmValidationButton">
                                            Confirmer
                                        </button>
                                    </div>
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('validate_retenu_salaire') }}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="retenueSalaireValidation" name="retenueSalaireValidation" value="">
    </form>
{% endblock %}

{% block javascripts %}

    <script>
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, " ");
        }

        $(document).ready(function () {
            const dataGrids = $("#dataGridRetenueSalaire").dxDataGrid({
                dataSource: '{{ url("api_reporting_paie_retenue_salaire") }}',
                showBorders: true,
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                scrolling: {
                    columnRenderingMode: 'virtual',
                    mode: 'virtual'
                },
                editing: {
                    mode: 'cell'
                },
                selection: {
                    mode: 'multiple',
                    showCheckBoxesMode: 'always'
                },
                groupPanel: {
                    visible: true
                },
                export: {
                    enabled: true,
                    allowExportSelectedData: true,
                    formats: ['xlsx']
                },
                onExporting(e) {
                    if (e.format === 'xlsx') {
                        const workbook = new ExcelJS.Workbook();
                        const worksheet = workbook.addWorksheet('RETENUE SUR SALAIRE');
                        DevExpress.excelExporter.exportDataGrid({
                            component: e.component,
                            worksheet,
                            autoFilterEnabled: true,
                            customizeCell: function (options) {
                                const {gridCell, excelCell} = options;
                                if (gridCell.rowType === 'data' && typeof gridCell.value === "number") {
                                    excelCell.text = formatNumber(gridCell.value);
                                    excelCell.font = {size: 9};
                                    excelCell.alignment = {horizontal: 'left'};
                                }
                            }
                        }).then(() => {
                            const date = new Date();
                            const year = date.getFullYear();
                            const month = date.getMonth() + 1;
                            const day = date.getDate();
                            const dateFormat = `${year}-${month < 10 ? '0' : ''}${month}-${day < 10 ? '0' : ''}${day}`;
                            workbook.xlsx.writeBuffer().then(function (buffer) {
                                saveAs(new Blob([buffer], {type: 'application/octet-stream'}), `RETENUE SUR SALAIRE ${dateFormat}.xlsx`);
                            });
                        });
                        e.cancel = true;
                    }
                },
                grouping: {
                    autoExpandAll: true
                },
                searchPanel: {
                    visible: true,
                    width: 240,
                    placeholder: 'Rechercher...'
                },
                paging: {
                    pageSize: 10
                },
                allowColumnReordering: true,
                allowColumnResizing: true,
                columnAutoWidth: true,
                columns: [
                    {
                        caption: 'S/N',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'ordre'
                    },
                    {
                        caption: 'Date opération',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'date_retenue'
                    },
                    {
                        caption: 'Emolument',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'retenue'
                    },
                    {
                        caption: 'Matricule',
                        alignment: 'center',
                        dataType: 'string',
                        dataField: 'matricule_salarie'
                    },
                    {
                        caption: 'Nom',
                        alignment: 'left',
                        dataType: 'string',
                        dataField: 'nom_salarie'
                    },
                    {
                        caption: 'Prénoms',
                        alignment: 'left',
                        dataType: 'string',
                        dataField: 'prenom_salarie'
                    },
                    {
                        caption: 'Stations',
                        alignment: 'left',
                        dataType: 'string',
                        dataField: 'station_salarie'
                    },
                    {
                        caption: 'Remboursement en brut',
                        alignment: 'right',
                        dataType: 'number',
                        dataField: 'retenue_montant_brut'
                    },
                    {
                        caption: 'Remboursement en net',
                        alignment: 'right',
                        dataType: 'number',
                        dataField: 'retenue_montant_net'
                    },
                    {
                        caption: 'Statut',
                        alignment: 'center',
                        dataType: 'object',
                        dataField: 'retenue_status',
                        cellTemplate: function (container, options) {
                            const status = options.value;
                            let badgeClass = 'badge badge badge-soft-primary';
                            $("<span>")
                                .addClass(badgeClass)
                                .text(status)
                                .appendTo(container);
                        }
                    }
                ],
                summary: {
                    totalItems: [
                        {
                            column: 'ordre',
                            summaryType: 'count',
                            displayFormat: 'Salariés : {0}'
                        },
                        {
                            column: 'nom_salarie',
                            customizeText() {
                                return 'CUMUL DES RETENUES SUR SALAIRE';
                            }
                        },
                        {
                            column: 'retenue_montant_brut',
                            summaryType: 'sum',
                            displayFormat: 'Sur le Brut : {0}'
                        },
                        {
                            column: 'retenue_montant_net',
                            summaryType: 'sum',
                            displayFormat: 'Sur le Net : {0}'
                        }
                    ]
                },
                toolbar: {
                    items: [
                        {
                            location: 'after',
                            widget: 'dxButton',
                            options: {
                                text: 'Valider les retenues sur salaire',
                                icon: 'bi bi-journal-check',
                                disabled: false,
                                onClick() {
                                    $('#validationConfirmationModal').modal('show');
                                }
                            }
                        }
                    ]
                }
            }).dxDataGrid("instance");

            // Gérer le clic sur le bouton de confirmation dans le modal de validation
            $('#confirmValidationButton').click(function () {
                // Récupérer les éléments sélectionnés dans la grille de données
                const selectedKeys = dataGrids.getSelectedRowKeys();
                const retenue_salaire = [];

                selectedKeys.forEach((retenueSalaire) => {
                    if (retenueSalaire.hasOwnProperty('operation_id')) {
                        retenue_salaire.push(retenueSalaire.operation_id)
                    }
                })

                $('#retenueSalaireValidation').val(`[${retenue_salaire}]`)
                $('#formContainerRetenueSalaire').submit()
            });
        })
    </script>

{% endblock %}