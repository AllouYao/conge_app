    <label for="its" class="col-md-1 col-form-label">ITS (0% à 32%) <span class="text-danger">*</span></label>
    <div class="col-md-3">
        <input type="text" class="form-control form-control-sm separator text-end" id="its" readonly value="{{ app.request.query.get('impot_brut') }}">
